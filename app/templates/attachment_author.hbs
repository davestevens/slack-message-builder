{{#if author_name}}
  <div class="attachment__author">
    {{#if author_icon}}
      <img
         class="attachment__author--icon"
         src="{{ author_icon }}"
         width="16"
         height="16"
         />
    {{/if}}
    <span class="attachment__author--name">
      {{ wrap_link author_name author_link }}
    </span>
  </div>
{{/if}}
