{
  "name": "slack-message-builder",
  "version": "0.0.0",
  "description": "Slack Message Builder",
  "author": "Dave Stevens <dave@dstvns.co.uk>",
  "repository": {
    "type": "git",
    "url": "https://github.com/davestevens/slack-message-builder.git"
  },
  "license": "MIT",
  "scripts": {
    "start": "http-server",
    "build": "npm run build-js && npm run build-css",
    "build-js": "browserify app/application.js -o dist/application.js",
    "build-js-watch": "watchify app/application.js -o dist/application.js",
    "build-css": "compass compile --sass-dir style --css-dir dist",
    "build-css-watch": "compass watch --sass-dir style --css-dir style"
  },
  "devDependencies": {
    "bootstrap": "^3.3.2",
    "handlebars": "^3.0.0",
    "http-server": "^0.7.3",
    "jquery": "^2.1.1"
  },
  "dependencies": {
    "babel-core": "^6.1.2",
    "babel-preset-es2015": "^6.1.2",
    "babelify": "^7.2.0",
    "browserify": "^12.0.1",
    "browserify-handlebars": "^1.0.0",
    "watchify": "^3.6.0"
  },
  "browserify": {
    "transform": [
      "babelify",
      "browserify-handlebars"
    ]
  }
}
